<Page
    x:Class="BOOK.SearchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BOOK">

    <StackPanel Margin="30" Spacing="20">
        <TextBlock Text="🔍 Tìm kiếm sách"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <TextBox x:Name="NameBox" PlaceholderText="Tên người dùng" />
        <TextBox x:Name="CategoryBox" PlaceholderText="Thể loại" />
        <TextBox x:Name="TitleBox" PlaceholderText="Tên sách" />
        <TextBox x:Name="QuantityBox" PlaceholderText="Số lượng cần" InputScope="Number"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
            <Button Content="📌 Kiểm tra" Click="CheckButton_Click" Width="120" />
            <Button Content="🔙 Trở về" Click="Back_Click" Width="120" />
        </StackPanel>
    </StackPanel>
</Page>