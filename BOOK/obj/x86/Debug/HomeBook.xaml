<Page
    x:Class="BOOK.HomeBook"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BOOK"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20" Margin="20">

            <TextBlock Text="Chào mừng đến với thư viện của chúng tôi"
                       FontSize="26"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,20,0,10"/>

            <Button x:ConnectionId='2' Content="Tìm kiếm sách" Width="250" Height="50"                           />
            <Button x:ConnectionId='3' Content="Mượn sách" Width="250" Height="50"                           />
            <Button x:ConnectionId='4' Content="Trả sách" Width="250" Height="50"                           />
            <Button x:ConnectionId='5' Content="Lịch sử mượn trả" Width="250" Height="50"                            />
            <Button x:ConnectionId='6' Content="Đăng xuất" Width="250" Height="50" Background="Red" Foreground="White"                           />

        </StackPanel>
    </ScrollViewer>
</Page>

