<Page
    x:Class="BOOK.BorrowPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BOOK">

    <StackPanel Margin="30" Spacing="20">
        <TextBlock Text="📚 Mượn sách" FontSize="24" FontWeight="Bold"/>

        <TextBox PlaceholderText="Họ tên"/>
        <TextBox PlaceholderText="Tuổi" InputScope="Number"/>
        <TextBox PlaceholderText="Số điện thoại" InputScope="TelephoneNumber"/>
        <TextBox PlaceholderText="Thể loại"/>
        <TextBox PlaceholderText="Tên sách"/>

        <DatePicker Header="Ngày mượn"/>

        <Button Content="Mượn" />
        <Button x:ConnectionId='2' Content="🔙 Trở về"                   />
    </StackPanel>
</Page>

