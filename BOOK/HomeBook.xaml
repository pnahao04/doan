<Page
    x:Class="BOOK.HomeBook"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BOOK"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20" Margin="20">

            <TextBlock Text="Chào mừng đến với thư viện của chúng tôi"
                       FontSize="26"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,20,0,10"/>

            <Button Content="Tìm kiếm sách" Width="250" Height="50" Click="SearchButton_Click"/>
            <Button Content="Mượn sách" Width="250" Height="50" Click="BorrowButton_Click"/>
            <Button Content="Trả sách" Width="250" Height="50" Click="ReturnButton_Click"/>
            <Button Content="Lịch sử mượn trả" Width="250" Height="50" Click="HistoryButton_Click"/>
            <Button Content="Đăng xuất" Width="250" Height="50" Background="Red" Foreground="White" Click="LogoutButton_Click"/>

        </StackPanel>
    </ScrollViewer>
</Page>